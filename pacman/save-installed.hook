[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Save list of explicitly installed packages
When = PostTransaction
Exec = /bin/sh -c 'pacman -Qqe > "/home/marco/dotfiles/pacman/installed.list" && cd "/home/marco/dotfiles" && sudo -u marco git add pacman/installed.list && sudo -u marco git commit -m "Update installed.list after pacman transaction"'